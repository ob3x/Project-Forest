<body>
    <!-- @include 'nav' -->
    <section class="contact">
        <div class="wrapper">
            <div class="contact-all">
                <div class="contact-text">
                    <h2 class="contact-text__title">Odezwij się do nas!</h2>
                    <p class="contact-text__p">Zapytaj nas o co tylko chcesz</p>
                    <p class="contact-text__link"><i class="contact-text__link-icon fa-solid fa-phone"></i>+48 000 000
                        000
                    </p>
                    <p class="contact-text__link"><i
                            class="contact-text__link-icon fa-solid fa-envelope"></i>forest@forest.com</p>
                    <p class="contact-text__link"><i class="contact-text__link-icon fa-brands fa-facebook"></i>Forest -
                        Zadbajmy wspólnie o lasy
                    </p>

                </div>
                <div class="contact-box">
                    <form action="mail.php" method="post" class="contact-form">
                        <div class="contact-box__name">

                            <label for="name" class="contact-box__label">Imię*</label>
                            <div class="contact-box__item">
                                <input type="text" id="name" name="name" required
                                    class="contact-box__item-input input-name" placeholder="Andrzej Kowalski">
                            </div>
                        </div>
                        <div class="contact-box__email">
                            <label for="email" class="contact-box__label">Email*</label>
                            <div class="contact-box__item">
                                <input type="email" id="email" name="email" required
                                    class="contact-box__item-input input-mail" placeholder="mail@mail.com">
                            </div>
                        </div>
                        <div class="contact-box__msg">
                            <label for="msg" class="contact-box__label">Wiadomość*</label>
                            <div class="contact-box__item">
                                <textarea name="msg" id="msg" required
                                    class="contact-box__item-input contact-box__item-textarea"
                                    placeholder="Wpisz tu coś"></textarea>
                            </div>
                            <button class="contact-box__btn">Wyślij<i
                                    class="contact-box__btn-icon fa-solid fa-paper-plane"></i></button>
                    </form>
                    <p class="contact-error"></p>
                </div>
            </div>
        </div>
        </div>
    </section>
    <section class="map">
        <div class="wrapper">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.89823784928!2d19.887973293477035!3d50.08819209810556!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2spl!4v1709224787550!5m2!1spl!2spl"
                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section>

